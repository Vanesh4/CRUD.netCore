@model Usuario
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inició de Sesion</title>
    <link rel="shortcut icon" href="~/rocket.ico" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <form method="post" asp-action="Login" asp-controller="CLogin" class="bg-light">
        <div class="container d-flex align-items-center vh-100">

            <div class="row">
                <div class="mx-auto">

                    <div class="card mx-auto">

                        <div class="card-body ">
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Usuario</label>
                                <input type="text" class="form-control" required asp-for="userName">
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputPassword1" class="form-label">Contraseña</label>
                                <input type="password" class="form-control" required asp-for="clave">
                            </div>
                            @* <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" asp-for="MantenerActivo">
                            <label class="form-check-label" for="exampleCheck1">Check me out</label>
                            </div> *@

                            <button type="submit" class="btn-lg btn-primary">Ingresar</button>
                            <p class="alert-danger">@ViewBag.Error</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>


