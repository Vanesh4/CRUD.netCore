@model Usuario
@{
    ViewData["Title"] = "Login";
    Layout = null;
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de Sesion</title>
    <link rel="shortcut icon" href="~/img/cropped-logoAppCircular-32x32.png" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/css/style.css">
    <script class="u-script" type="text/javascript" src="nicepage.js" defer=""></script>

    <link rel="stylesheet" href="~/assets/css/now-ui-dashboard.css" />
</head>
<body class="main-layout">

    <div class="main-panel w-100" id="main-panel">

        <div class="panel-header p-4">
            <div class="header text-center">
                <img src="~/img/Logo blanco sin fondo-01 (1).png" width="400px">
            </div>
        </div>

        <div class="content">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="card text-center">
                        <div class="col-md-11 mr-auto">
                            <div class="card-header">
                                <h4 class="card-title">Iniciar Sesión</h4>
                            </div>   
                            
                            <div class="card-body">
                                <form method="post" asp-action="Login" asp-controller="CLogin">
                                    <div class="input-group no-border form-control-lg text-center">
                                        <span class="input-group-text" id="basic-addon1"><i class="now-ui-icons users_circle-08" id="basic-addon1"></i></span>
                                        <input type="text" class="form-control" placeholder="Usuario" required asp-for="userName">
                                    </div>
                                    <div class="input-group no-border form-control-lg text-center">
                                        <span class="input-group-text" id="basic-addon1"><i class="now-ui-icons objects_key-25" id="basic-addon1"></i></span>
                                        <input type="password" class="form-control" placeholder="Contraseña" required asp-for="clave">
                                    </div>
                                    <div class="input-group no-border form-control-lg text-center">
                                        <button class="btn bg-panel-header w-100" type="submit">Ingresar</button>
                                        <p class="alert-danger">@ViewBag.Error</p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>