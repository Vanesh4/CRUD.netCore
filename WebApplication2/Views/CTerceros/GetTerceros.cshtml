
@{
    ViewData["Title"] = "GetTerceros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{

<link rel="stylesheet" href="@Url.Content("~/css/tablas.css")" />


<div class="body">
	<div class="d-md-flex justify-content-md-end">
					<button onclick="zoomIn()" class="btn btn-outline-secondary m-2">+</button>
					<button onclick="zoomOut()" class="btn btn-outline-secondary m-2">-</button>
			</div>
	<table id="miTabla">
		<thead>
			<tr>						
						<th>
									<form asp-action="FiltroPorCodTer" asp-controller="CTerceros" method="post">
			<div class="d-flex justify-content-center">
				<input class="form-control m-3" type="number" name="codTer" placeholder="codigo tercero">
				<button type="submit" class="btn btn-primary m-3">Buscar</button>
			</div>
		</form>
						</th>
						<th>
								<form asp-action="FiltroPorNombre" asp-controller="CTerceros" method="post">
									<div class="d-flex justify-content-center">
										<input class="form-control d-block" type="text" name="nombre" placeholder="Nombre">
										<button class="btn btn-primary d-block" type="submit"><img src="~/img/lupa.png"></img></button>
									</div>
								</form>
						</th>
					</tr>
			<tr>
				<th>CÉDULA</th>
				<th>NOMBRE</th>
				<th>DIRECCION</th>
				<th>EMAIL</th>
				<th>FECHA DE INGRESO</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			@* @for (int i = 0; i < 20; i++) *@
			{
				@* var item = Model[i]; *@
					<tr>
						<td>@item.COD_TER</td>
						<td>@item.NOM_TER</td>
						<td>@item.DIR1</td>
						<td>@item.EMAIL</td>
						<td>@item.FEC_ING</td>
					</tr>
			}
		</tbody>
	</table>
</div>

	string accion = ViewContext.RouteData.Values["action"].ToString();

	@if (accion == "GetTerceros")
	{
		<form method="post" action="@Url.Action("GetTercerosTodos")">
					<button type="submit" class="btn btn-outline-primary m-1">Mostrar Todos los Registros</button>
		</form>
	}


	<script src="@Url.Content("~/js/zoom.js")"></script>
}

